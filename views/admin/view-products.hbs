<section>
    <div class="container">
        <div class="row mt-4 ">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
        </div>
        <table class="table table-striped mt-5" id="data-table">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Dscription</th>
      <th scope="col">Price</th>
      <th> image</th>
      <th>Options</th>
      
    </tr>
  </thead>
  <tbody>
{{#each allproducts}}
<tr>
  <th scope="row"> {{this.index}}. </th>
  <td> {{this.name}} </td>
  <td> {{this.category}} </td>
  <td> {{this.description}}  </td>
  <td> {{this.price}}  </td>
  <td> <img src="/product-images/{{this.image}}" class="card-img-top" alt="Card image cap" style="height: 50px; object-fit: contain;">  
    </td>
    <td>
      <a  class="btn btn-primary" href="/admin/edit-product/{{this._id}}" >Edit</a>
      <a  class="btn btn-danger" href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are you sure to delete {{this.name}}?') " >Delete</a>
    </td>
  </td>
</tr>
{{/each}}

  </tbody>
</table>
    </div>
</section>
<script>
  $(function (){
   $('#data-table').DataTable(); 
  });
</script>